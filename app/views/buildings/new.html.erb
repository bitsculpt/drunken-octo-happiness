<%= simple_form_for @building do |f| %>
  <%= f.input :street_address %>
  <%= f.input :city %>
  <%= f.input :state %>
  <%= f.input :postal_code %>
  <%= f.input :description %> 
  <%= f.association :owner, :label_method => :first_name, :value_method => :id  %>   
  <%= f.button :submit %>
<% end %>